{
  "manifest_version": 3,
  "name": "ChHeader",
  "description": "Profile-based HTTP header editor with Manifest V3",
  "version": "0.1.2",
  "action": {
    "default_popup": "ui/popup.html",
    "default_title": "ChHeader"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "128": "icons/128.png"
  },
  "permissions": ["declarativeNetRequest", "storage", "unlimitedStorage"],
  "host_permissions": ["<all_urls>"],
  "declarative_net_request": {
    "rule_resources": []
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "optional_permissions": ["declarativeNetRequestWithHostAccess"],
  "minimum_chrome_version": "118",
  "offline_enabled": true
}
